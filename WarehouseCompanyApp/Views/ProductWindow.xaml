<Window x:Class="WarehouseCompanyApp.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товары на складе компании WarehouseCompany"
        Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGridProducts" Grid.Row="0" AutoGenerateColumns="True" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Название" Width="70"/>
                <TextBox x:Name="txtName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Описание" Width="70"/>
                <TextBox x:Name="txtDescription" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Цена" Width="70"/>
                <TextBox x:Name="txtPrice" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Категория" Width="70"/>
                <ComboBox x:Name="cmbCategory" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="btnAdd" Content="Добавить" Width="80" Margin="0,0,10,0" Click="btnAdd_Click"/>
                <Button x:Name="btnDelete" Content="Удалить" Width="80" Margin="0,0,10,0" Click="btnDelete_Click"/>
                <Button x:Name="btnEdit" Content="Изменить" Width="80" Click="btnEdit_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>